{
  "manifest_version": 2,

  "name": "HCS Monitor",
  "description": "Slideshow and info for the hallway monitor.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Start show"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
